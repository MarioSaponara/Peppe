@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <!-- Javascript -->
    <script src="~/resources/googleApiManagerOwner.js"></script>
</head>
<body>


    <h1>Gestione Parcheggi</h1>

    <button id="refresh">Aggiorna</button>

    <div class="col-md-6 mb-3">
        <br><br>
        <div id="map" style="width: 500px; height:500px;"></div>
        <br>

        <form action="/Home/dispatchHome" method="post">
            <button type="submit">
                Indietro
            </button>
        </form>
    </div>


    <div class="container">
        <h1>Auto in sosta</h1>
        <br>
        <table>
            <thead>
               <tr>
                    @*<th>ID STOP</th>*@
                    <!--  <th>TIPO DISABILE</th>  -->
                    <th>TARGA</th>
                    <th>START</th>
                    <th>FINISH</th>
                    <th>PAGATO</th>
                </tr>
            </thead>
            <tbody id="stopList"></tbody>
        </table>
        <p id="abusiveError"></p>

    </div>

    <script>
	function myMap() {
        var googleApiManagerOwner = new GoogleApiManagerOwner('map', 41.9, 12.48,'/api/updateSlots');
			googleApiManagerOwner.selectStopList('stopList','abusiveError');
			googleApiManagerOwner.selectRefresh('refresh');
		};
    </script>

    <script src="https://maps.googleapis.com/maps/api/js?sensor=false&libraries=places&language=en&key=AIzaSyAsEE6wc-sX5HniWTVBPTSZgHOwN_cf5F0&callback=myMap"></script>

</body>
</html>
